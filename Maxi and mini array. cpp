class Solution
{
   public:
    int findSum(int arr[], int N)
    {
    	//code here.
    	
    	int min=INT_MAX;
    	int max=INT_MIN;
    	for(int i=0;i<N;i++){
    	    if(arr[i]<min)
    	    min=arr[i];
    	}
    	for(int i=0;i<N;i++){
    	    if(arr[i]>max)
    	    max=arr[i];
    	}
    	
    	return min+max;
    }

};

