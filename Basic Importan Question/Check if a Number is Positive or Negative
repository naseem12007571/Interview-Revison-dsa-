#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cout<<"Enter the number to check  postive and negative ";
    cin>>n;
    
    if(n>0){
        cout<<"Number is postive ";
    }else if(n<0){
        cout<<"number is negative ";
    }else{
        cout<<"number is zero ";
    }
}
